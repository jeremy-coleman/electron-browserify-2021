{
    "compilerOptions": {
      "sourceMap": true,
      "declaration": false,
      "module": "commonjs",
      "target": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": false,
      "noImplicitAny": false,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["*", "src/*"],
        "@coglite/*": ["src/packages/*"]
      },
      "lib": ["dom", "esnext"]
    },
    "include": ["src", "tools"],
    "exclude": ["node_modules", "lib"]
  }
  